<h1>Welcome, <%=@user.username%>!</h1>
<p><a href="/logout">Log Out</a></p>

<h2>What would you like to do today?</h2>

<p><a href="/routines/new">Create a New Routine</a></p>

<p><a href="/routines">View or Edit Your Existing Routines</a></p>

<h3>Recently Added Routines From the Community</h3>
<%if !@routines.empty?%>
  <%@routines.reverse.each do |routine|%>
    <ul><a href="/routines/<%=routine.id%>"><%=routine.name%></a>
      <li>Added by <%=routine.user.username%></li>
      <li><%=routine.description%></li>
    </ul>
  <%end%>
<%end%>

<h3>Recently Added Products From the Community</h3>
<%if !@products.empty?%>
  <%@products.reverse.each do |product|%>
    <li><%=product.name%></li>
  <%end%>
<%end%>
