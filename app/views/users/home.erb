<div class="container">

  <h1>Welcome, <%= @user.username %>!</h1><br>

  <div class="row">
    <h3>Recently Added Routines From the Community</h3>
    <% if !@routines.empty? %>
      <% @routines.reverse.take(5).each do |routine| %>
        <% user = (current_user.id == routine.user_id) ? "you" : routine.user.username %>
        <ul><a href="/routines/<%= routine.id %>"><%= routine.name %></a>
          <li>Added by <a href="/users/<%= routine.user.slug %>"><%= user %></a></li>
        </ul>
      <% end %>
    <% end %>
  </div>

  <div class="row">
    <div class="six columns">
      <h3>Recently Added Products</h3>
      <% if !@products.empty? %>
        <% @products.reverse.take(10).each do |product| %>
          <li><a href="/products/<%= product.id %>"><%= product.name %></a></li>
        <% end %>
      <% end %>
    </div>

    <div class="six columns">
      <h3>Explore New Users!</h3>
      <% if !@users.empty? %>
        <% @users.reverse.take(10).each do |user| %>
          <li><a href="/users/<%= user.slug %>"><%= user.username %></a></li>
        <% end %>
      <% end %>
    </div>
  </div><!-- end of row -->

</div><!-- main div -->
