<div class="user_info">
  <h1><%=@user.username %></h1>
  <h4>User Since _#will add this functionality later___</h4>

  <p>Skin Type: #will add this functionality later</p>
  <p>Skin Concerns: #will add this functionality later</p>
</div>

<div>
  <h3> <%= @user.username %>'s routines </h3>

  <% if @user_routines.empty? %>
    <p> <%= @user.username %> has not added any routines yet!<p>
  <%else%>
    <%@user_routines.reverse.each do |routine|%>
      <ul><a href='/routines/<%=routine.id%>'><%=routine.name%></a>
          <%routine.products.each do |product|%>
            <li><%=product.name%></li>
          <%end%>
      </ul>
    <%end%>
  <%end%>
</div>
