<!-- fix formatting/indentation -->



  <% if flash[:message] %>
    <div class="row">
      <p><%= flash[:message] %></p>
    </div>
  <% end %>

  <h2>Create A New Routine!</h2>
  <form method="post" action="/routines">

    <div class="row">
      <div class="four columns">
        <label for="name">Routine Name</label>
        <input type="text" name="routine[name]" class="u-full-width"><br></br>
      </div>
      <div class="eight columns">
        <label for="description">Description</label>
        <input type="text" name="routine[description]" class="u-full-width"><br></br>
      </div>
    </div><!-- end of row -->

    <label for="products" class="">Choose From Existing Products:
      <span class="label-body"></span>
      <a href="/products/new">Or, click here to save a new product to the database first.</a><br></br>
      <% Product.all.each do |product| %>
        <input type="checkbox" name="routine[product_ids][]" value="<%= product.id %>"><%= product.name %><br></input>
      <% end %>
    </label>

    <input type="submit" id="submit" value="Submit">
  </form>
