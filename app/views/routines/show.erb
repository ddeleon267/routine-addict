<h1>Routine: <%=@routine.name%></h1>
<h2>added by <%= current_user.username %> </h2> <!--would like this to be 'you' if current user -->

<% if current_user.id == @routine.user_id %>
  <% #can I do a button here as well??? %>
  <a href= "/routines/<%=@routine.id %>/edit"> Edit This Routine </a>
  <form method="POST" action="/routines/<%=@routine.id%>/delete">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input id="delete_button" type="submit" name="Delete Routine" value="Delete Routine">
  </form>
<% end %>

<h3>Products Used</h3>
<%@routine.products.each do |product| %>
  <li><a href="/products/<%=product.id%>"><%=product.name%></a></li>

<%end%>

<h3>Description: </h3>
<p><%=@routine.description%></p>


